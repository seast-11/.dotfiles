#!/bin/sh

vol="$(amixer get Master | tail -n1 | sed -r 's/.*\[(.*)%\].*/\1/')"
onOroff="$(amixer get Master | tail -n1 | sed 's/.*\[\(on\|off\)\]/\1/')"

if [ "$onOroff" == "off" ]; then
  vol=0
fi

if [ "$vol" -gt "70" ]; then
	icon="^c#66d9ef^ðŸ”Š"
elif [ "$vol" -eq "0" ]; then
    icon="^c#66d9ef^ðŸ”‡"
elif [ "$vol" -lt "30" ]; then
	icon="^c#66d9ef^ðŸ”ˆ"
else
	icon="^c#66d9ef^ðŸ”‰"
fi

echo -e "$icon $vol"

case $BUTTON in
    1) notify-send "ðŸ“£ Volume Level" "$vol" ;;
esac
